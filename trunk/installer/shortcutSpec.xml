<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>

<shortcuts>
	<programGroup defaultName="Greentone" location="applications"/>
	<shortcut name="GreenTone"
    	target="java"
    	workingDirectory="$INSTALL_PATH"
    	description="Gestionale per geometri"
    	iconFile="$INSTALL_PATH\logo_32x32.ico"
    	initialState="normal"
    	programGroup="yes"
    	desktop="yes"
    	applications="no"
    	startMenu="no"
    	startup="no"
    	encoding="UTF-8"
    	commandLine="-jar &quot;$INSTALL_PATH\greentone.jar&quot;">
    	<createForPack name="Base"/>
 	</shortcut>
  
	<shortcut name="Uninstaller"
    	target="java"
    	workingDirectory="$INSTALL_PATH"
    	description="Disinstalla"
		iconFile="trashcan_full"
    	initialState="noShow"
    	programGroup="yes"
    	desktop="no"
    	applications="no"
    	startMenu="no"
    	startup="no"
    	commandLine="-jar &quot;$INSTALL_PATH/Uninstaller/uninstaller.jar&quot;">
    	<createForPack name="Base" />     
   </shortcut>
   
</shortcuts>